<Window x:Class="WPF_49_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_49_Homework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="txt1" FontSize="40" Width="200" Margin="100 10 100 10"/>
            <TextBox x:Name="txt2" FontSize="40" Width="200" Margin="100 10 100 10"/>
        </StackPanel>
        
        <Button Content="Add" FontSize="40" Width="200" Click="Button_Click"/>
        <TextBlock x:Name="txtblock" FontSize="40" Background="Gold" Width="300" Margin="0 20 0 20"/>
        <Button Content="Countries window" FontSize="40" Width="400" Click="Next_Button_Click"/>
    </StackPanel>
</Window>
